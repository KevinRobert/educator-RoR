<!-- Start contact modal -->
<div class="modal fade" id="contact-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Report Problem</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" style="display: none;">
          <span class="error-message"></span>
        </div>
        <form class="form-horizontal">
          <div class="form-group">
            <label for="contact-name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input id="contact-name" class="form-control" placeholder="Your name" />
            </div>
          </div>
          <div class="form-group">
            <label for="contact-email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input id="contact-email" type="email" class="form-control" placeholder="Email" />
            </div>
          </div>
          <div class="form-group">
            <label for="contact-message" class="col-sm-2 control-label">Message</label>
            <div class="col-sm-10">
              <textarea id="contact-message" class="form-control" placeholder="Message" rows="5" ></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a class="btn btn-default" data-dismiss="modal">Close</a>
        <a class="btn btn-default btn-primary btn-send" href="#">Send</a>
      </div>
    </div>
  </div>
</div>
<!-- End contact modal -->