<div class="container">
  <div class="row mt30">
    <div class="col-md-12 border-bottom">
      <%= link_to "Back to Test List", @back_url %>
    </div>
  </div>

  <div class="row mt30">
    <div class="col-md-12 mb5">
      <div class="row">
        <div class="col-sm-12 text-right">
          <%= link_to "Add Questions", index_admin_questions_path(@test), class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="table-responsive">
        <table id="questions-table" class="table table-striped table-bordered sortable-table">
          <thead>
            <tr>
              <th>No</th>
              <th>Question</th>
              <th>Difficulty</th>
              <th>Question Type</th>
              <th>Answer Type</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% unless @questions.present? %>
              <tr>
                <td colspan="6">There is no data</td>
              </tr>
            <% else %>
              <% @questions.each_with_index do |q, q_index| %>
                <tr data-id="<%= q.id %>">
                  <td class="text-center">
                    <%= q_index + 1 %>
                  </td>
                  <td>
                    <%= q.question %>
                  </td>
                  <td>
                    <%= q.difficulty %>
                  </td>
                  <td>
                    <%= q.question_type %>
                  </td>
                  <td>
                    <%= q.answer_type %>
                  </td>
                  <td style="width: 150px;">
                    <%= link_to "Remove", admin_test_remove_question_path(@test, q), :data => { :confirm => "Are you sure?" }, :method => :delete %>
                    &nbsp; | &nbsp;
                    <%= link_to "View", admin_test_remove_question_path(@test, q) %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>